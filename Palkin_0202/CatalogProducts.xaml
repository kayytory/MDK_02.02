<Window x:Class="Palkin_0202.CatalogProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Palkin_0202"
        mc:Ignorable="d"
        Title="Каталог продуктов" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgProducts" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" HeadersVisibility="Column" BorderThickness="1" BorderBrush="#CCCCCC" Margin="0,49,0,60" Background="#FFBBDCFA" FontFamily="Bahnschrift Light SemiCondensed">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" Binding="{Binding name}" Width="*"/>
                <DataGridTextColumn Header="Артикул" Binding="{Binding article}" Width="100"/>
                <DataGridTextColumn Header="Количество на складе" Binding="{Binding amount_in_stock}" Width="120"/>
                <DataGridTextColumn Header="Минимальная стоимость" Binding="{Binding min_cost, StringFormat={}{0:N2} руб.}" Width="130"/>
                <DataGridTextColumn Header="Тип продукции" Binding="{Binding Product_type.name}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="117,392,0,0" VerticalAlignment="Top" Width="88" Click="Button_Click" Background="#FF0C4882" Height="28" Foreground="White" FontWeight="Bold" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Button Content="Рассчитать колво материалов" HorizontalAlignment="Left" Margin="466,392,0,0" VerticalAlignment="Top" Width="198" Background="#FF0C4882" Height="28" Click="Button_Click_1" Foreground="White" FontWeight="Bold" FontFamily="Bahnschrift Light SemiCondensed"/>
    </Grid>
</Window>
