<Window x:Class="Palkin_0202.AddPartner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Palkin_0202"
        mc:Ignorable="d"
        Title="Добавление партнера" Height="460" Width="302">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="136*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtName" Grid.Column="1" HorizontalAlignment="Center" Margin="0,43,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontFamily="Bahnschrift Light SemiCondensed"/>
        <ComboBox x:Name="cmbType" DisplayMemberPath="name" Grid.Column="1" HorizontalAlignment="Center" Margin="0,81,0,0" VerticalAlignment="Top" Width="120" FontFamily="Bahnschrift Light SemiCondensed">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="#FFBBDCFA" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <TextBox x:Name="txtDir" Grid.Column="1" HorizontalAlignment="Center" Margin="0,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontFamily="Bahnschrift Light SemiCondensed"/>
        <TextBox x:Name="txtEmail" Grid.Column="1" HorizontalAlignment="Center" Margin="0,171,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="txtEmail_TextChanged" FontFamily="Bahnschrift Light SemiCondensed"/>
        <TextBox MaxLength="10" x:Name="txtPhone" Grid.Column="1" HorizontalAlignment="Left" Margin="38,218,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="95" PreviewTextInput="txtPhone_PreviewTextInput" FontFamily="Bahnschrift Light SemiCondensed"/>
        <TextBox x:Name="txtAddress" Grid.Column="1" HorizontalAlignment="Center" Margin="0,261,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontFamily="Bahnschrift Light SemiCondensed"/>
        <TextBox x:Name="txtINN" MaxLength="10" Grid.Column="1" HorizontalAlignment="Center" Margin="0,306,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" PreviewTextInput="txtINN_PreviewTextInput" FontFamily="Bahnschrift Light SemiCondensed"/>
        <TextBox x:Name="txtRating" MaxLength="2" Grid.Column="1" HorizontalAlignment="Center" Margin="0,349,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" PreviewTextInput="txtRating_PreviewTextInput" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="13,39,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Label Content="Тип партнера" HorizontalAlignment="Left" Margin="13,81,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Label Content="Имя директора" HorizontalAlignment="Left" Margin="13,122,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="13,167,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Label Content="Телефон" HorizontalAlignment="Left" Margin="13,214,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Label Content="Адрес" HorizontalAlignment="Left" Margin="13,257,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Label Content="ИНН" HorizontalAlignment="Left" Margin="13,302,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Label Content="Рейтинг" HorizontalAlignment="Left" Margin="13,345,0,0" VerticalAlignment="Top"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="35,394,0,0" VerticalAlignment="Top" Width="73" Click="Button_Click" Background="#FF0C4882"/>
        <Button Content="Добавить" HorizontalAlignment="Center" Margin="0,394,0,0" VerticalAlignment="Top" Width="73" Grid.Column="1" Click="Button_Click_1" Background="#FF0C4882"/>
        <Label Grid.Column="1" Content="+7" HorizontalAlignment="Left" Margin="8,214,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
