<Window x:Class="Palkin_0202.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Palkin_0202"
        mc:Ignorable="d"
        Title="Заявки" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ListBox Background="#BBDCFA" x:Name="requestList" Margin="0,110,0,62">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Black" Width="730" Height="130" Padding="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" FontSize="16" FontWeight="Bold" Margin="10,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat=" {0} | {1}">
                                        <Binding Path="partnerType"/>
                                        <Binding Path="name"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <!-- Стоимость -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                                <TextBlock FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Стоимость: {0:F2} р">
                                            <Binding Path="costAll"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>

                            <!-- Юр адрес -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="12" Margin="10,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat=" {0} ">
                                        <Binding Path="address"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <!-- Номер -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" FontSize="12" Margin="10,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat=" +7 {0} ">
                                        <Binding Path="phone"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <!-- Рейтинг -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" FontSize="12" Margin="10,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Рейтинг: {0} ">
                                        <Binding Path="rating"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Редактирование" HorizontalAlignment="Left" Margin="152,36,0,0" VerticalAlignment="Top" Height="32" Width="124" Click="Button_Click_1" Background="#FF0C4882" Foreground="White" FontWeight="Bold" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Button Content="Добавление" HorizontalAlignment="Left" Margin="466,36,0,0" VerticalAlignment="Top" Height="33" Width="124" Click="Button_Click" Background="#FF0C4882" Foreground="White" FontWeight="Bold" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Image HorizontalAlignment="Left" Source="/images/logo.png" Height="84" Margin="16,10,0,0" VerticalAlignment="Top" Width="94"/>
        <Button Content="Каталог продукции" HorizontalAlignment="Center" Margin="0,385,0,0" VerticalAlignment="Top" Height="32" Width="124"  Background="#FF0C4882" Click="Button_Click_2" FontWeight="Bold" Foreground="White" FontFamily="Bahnschrift Light SemiCondensed"/>


    </Grid>
</Window>
