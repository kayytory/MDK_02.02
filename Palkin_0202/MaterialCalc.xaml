<Window x:Class="Palkin_0202.MaterialCalc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Palkin_0202"
        mc:Ignorable="d"
        Title="Калькулятор материалов" Height="500" Width="450">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Text="Продукция:" FontWeight="SemiBold" Margin="0,0,0,5" FontFamily="Bahnschrift Light SemiCondensed"/>
        <ComboBox Grid.Row="2" x:Name="cmbProduct" DisplayMemberPath="name"></ComboBox>

        <TextBlock Grid.Row="3" Text="Требуемое количество:" FontWeight="SemiBold" Margin="0,0,0,5" FontFamily="Bahnschrift Light SemiCondensed"/>
        <TextBox Grid.Row="4" x:Name="txtAmount" Padding="8" Margin="0,0,0,20" Height="30"/>

        <TextBlock Grid.Row="5" Text="Материал:" FontWeight="SemiBold" Margin="0,0,0,5" FontFamily="Bahnschrift Light SemiCondensed"/>
        <ComboBox Grid.Row="6" DisplayMemberPath="name" x:Name="cmbMaterial" Padding="8" Margin="0,0,0,20" Height="25"/>

        <TextBlock Grid.Row="7" Text="Колво продукции на складе:" FontWeight="SemiBold" Margin="0,0,0,5" FontFamily="Bahnschrift Light SemiCondensed"/>
        <TextBox Grid.Row="8" x:Name="txtAmountInStock" Padding="8" Margin="0,0,0,20" Height="30"/>

        <Border Grid.Row="9" Background="#BBDCFA" CornerRadius="6" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Результат расчета:" FontWeight="Bold" Margin="0,0,0,5" FontFamily="Bahnschrift Light SemiCondensed"/>
                <TextBlock x:Name="txtResult" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="CalculateButton" Content="Рассчитать" Click="CalculateButton_Click" Padding="25,12" FontWeight="Bold" Margin="0,0,15,0" Background="#0C4882" Foreground="White" FontFamily="Bahnschrift Light SemiCondensed"/>
            <Button x:Name="CloseButton" Content="Закрыть" Click="CloseButton_Click" Padding="25,12" FontWeight="Bold" Background="#0C4882" Foreground="White" FontFamily="Bahnschrift Light SemiCondensed"/>
        </StackPanel>
    </Grid>
</Window>
